<com.yun.mslidingmenu.SlideMenu xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dm"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:yun="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    yun:drag_menu_padding="50dp"
    android:background="@drawable/mingren"
    android:scrollbars="none"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <include layout="@layout/layout_menu" />

        <com.yun.mslidingmenu.SlideHomePager
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/jj" >
            <com.yun.mslidingmenu_mastet.CircleImageView
                android:id="@+id/ibtn_icon1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:layout_margin="10dp"
                android:singleLine="true"
                android:onClick="onClick"
                android:src="@drawable/mingren1"
                android:textColor="@android:color/white" />
            
             <com.yun.mslidingmenu_mastet.CircleImageView
                android:id="@+id/ibtn_icon2"
                android:layout_width="35dp"
                 android:layout_margin="10dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:singleLine="true"
                 android:onClick="onClick"
                android:src="@drawable/mingren1"
                android:textColor="@android:color/white" />

        </com.yun.mslidingmenu.SlideHomePager>
        
         <include layout="@layout/layout_menu" />
        
    </LinearLayout>

</com.yun.mslidingmenu.SlideMenu>